<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (College.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">college Name</th>
                        <th scope="col">College Abbreviation</th>
                    </tr>
                </thead>
                <tbody>
                    <% College.forEach((College, index) => { %>
                        <tr>
                            <th scope="row"><%= College.collegeID %></th>
                            <
                            <td><%= College.collegeName %></td>
                            <td><%= College.CoAbbreviation %></td>
                            <td>
                                <a href="/edit/<%= College.collegeID %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= College.collegeID %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No colleges found. Go <a href="/add" >here</a> to add a college.</p>
        <% } %>
    </div>
</div>
</body>
</html>
